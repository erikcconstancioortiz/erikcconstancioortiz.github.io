    function showMaterias(carrera, semestre) {
        document.getElementById("semestres").classList.add("hidden");
        document.getElementById("materias").classList.remove("hidden");

        const materiasList = document.getElementById("materias-list");
        materiasList.innerHTML = "";

        const materiasSemestre = materias[carrera][semestre];
        if (!materiasSemestre) {
            materiasList.innerHTML = "<p>No hay materias disponibles.</p>";
            return;
        }

        materiasSemestre.forEach(materia => {
            const div = document.createElement("div");
            div.className = "card";
            div.innerHTML = `<strong>${materia.nombre}</strong><br><em>Temario:</em><ul>${
                materia.temario.map(t => `<li>${t}</li>`).join("")
            }</ul><br><em>Ejemplos:</em><ul>${
                materia.ejemplos.map(ej => `
                    <li>
                        <strong>${ej.titulo}:</strong> ${ej.descripcion}<br>
                        <em>Pasos:</em><ol>${ej.pasos.map(p => `<li>${p}</li>`).join("")}</ol>
                    </li>
                `).join("")
            }</ul>`;
            materiasList.appendChild(div);
        });
    }
</script>
